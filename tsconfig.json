{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",

    "skipLibCheck": true,
    "strict": true,

    "types": [ "vue" ],
    "jsx": "preserve"
  },
  "include": [ "src/**/*.ts", "src/**/*.vue" ]
}
